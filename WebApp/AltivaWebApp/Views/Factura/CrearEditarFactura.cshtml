        parametros.push({ nombre: "idFactura", valor: '@Model.Id'});
        parametros.push({ nombre: "idEmpresa", valor: '@Context.Session.GetInt32("idEmpresa")' });

        var data = { NombreReporte: "Facturaticket", parametros: parametros };

        $.ajax({
            type: "POST",
            url: '@Url.Action("ReporteHTML", "VistaReporte")',
            cache: false,
            xhr: function () {// Seems like the only way to get access to the xhr object
                var xhr = new XMLHttpRequest();
                xhr.responseType = 'blob'
                return xhr;
            },
            data:data,
            success: function (data) {

                //console.log(data);

                var reader = new FileReader();
                reader.readAsText(data);

                reader.onloadend = function (e) {
                    //base64data = reader.result;

                    $('#wordContent').html(reader.result);
                    $('#wordContent').wordExport();

                }

            },
            error: function () {
                cargarAlert("@Lb["errorGeneral"]");
            }
        });


    }

</script>

