    {
        ViewData["Title"] = Lb["Editar"] + " " + Lb["Factura"];
    }
    else
    {
        ViewData["Title"] = Lb["Nueva"] + " " + Lb["Factura"];
    }

}

<div class="row">
    <div class="col-md-2 col-sm-3 col-xs-12">
        @if (Model.Id != 0)
        {
            <h3>@Lb["Editar"] @Lb["Factura"]</h3>
        }
        else
        {
            <h3>@Lb["Nueva"] @Lb["Factura"]</h3>
