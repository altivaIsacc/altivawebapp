@model AltivaWebApp.ViewModels.AjusteViewModel
@inject IStringLocalizer<SharedResources> SharedLocalizer


@{
    ViewData["Title"] = "CrearEditarAjuste";
}


@if (Model.Id != 0)
{
    <h3>@SharedLocalizer["editarAjuste"]</h3>
}
else
{
    <h3>@SharedLocalizer["nuevoAjuste"]</h3>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span hidden class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Anulada" /> @Html.DisplayNameFor(model => model.Anulada)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TotalEntrada" class="control-label"></label>
                <input asp-for="TotalEntrada" class="form-control" />
                <span asp-validation-for="TotalEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalSalida" class="control-label"></label>
                <input asp-for="TotalSalida" class="form-control" />
                <span asp-validation-for="TotalSalida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaldoAjuste" class="control-label"></label>
                <input asp-for="SaldoAjuste" class="form-control" />
                <span asp-validation-for="SaldoAjuste" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <input asp-for="IdUsuario" class="form-control" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdBodega" class="control-label"></label>
                <input asp-for="IdBodega" class="form-control" />
                <span asp-validation-for="IdBodega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

