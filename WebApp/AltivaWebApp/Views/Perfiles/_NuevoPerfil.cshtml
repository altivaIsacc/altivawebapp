@model AltivaWebApp.ViewModels.PerfilViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Perfiles" asp-action="NuevoPerfil">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label data-translate="nombre" asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" id="nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button data-translate="guardar" type="submit" id="nuevo" value="Nuevo Perfil" class="btn btn-primary">Guardar</button>
                <button data-translate="cancelar" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </form>
    </div>
</div>




