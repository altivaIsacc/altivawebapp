
@model IEnumerable<AltivaWebApp.Domains.TbFdTareaTipo>

@{
    ViewData["Title"] = "Listar Tipos";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}


    <table class="table   table-striped table-bordered dt-responsive nowrap dataTable" id="tablaTiposTarea" style="width:100%">
        <thead>
            <tr>
                <th>
                    Título
                </th>
                <th>
                    Color
                </th>
                <th>
                    Controla fecha límite
                </th>
                <th>
                    Días fecha límite
                </th>
                <th>
                    Por defecto
                </th>
                <th>
                    Activo
                </th>
                <th>
                    Fecha Creación
                </th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {



                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td bgcolor=" @item.Color"></td>
                    <td>
                        <input type="checkbox" checked="@item.ControlaFechaLimite" disabled />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiasFechaLimite)
                    </td>
                    <td>

                        <input type="checkbox" checked="@item.EsTipoDefecto" disabled />
                    </td>
                    <td>

                        <input type="checkbox" checked="@item.Activo" disabled />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreacion)
                    </td>
                    <td>
                        <button onclick="EditarTipo(@item.Id)" class="btn btn-link "><i class="fas fa-edit dark"></i></button>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link dark"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

<script>

    $("#tablaTiposTarea").DataTable({
        scrollY: '50rem',
        scrollX: '50rem',
        scrollCollapse: true,
        paging: false,
        info: false,
        "ordering": false,
        language: {
            "decimal": "",
            "emptyTable": "No hay información",

            "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
            "infoFiltered": "(Filtrado de _MAX_ total entradas)",
            "infoPostFix": "",
            "thousands": ",",
            "lengthMenu": "Mostrar _MENU_ Entradas",
            "loadingRecords": "Cargando...",
            "processing": "Procesando...",
            "search": "<i class='fas fa-search'></i>",
            "zeroRecords": "Sin resultados encontrados",
            "paginate": {
                "first": "Primero",
                "last": "Ultimo",
                "next": "Siguiente",
                "previous": "Anterior"
            }
        }

    });
</script>