@model AltivaWebApp.ViewModels.InventarioBodegaViewModel
@inject IStringLocalizer<SharedResources> SharedLocalizer
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}

<div class="row">
    <div class="col-md-4">
        <form id="frmUnidad">

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExistenciaMinima" class="control-label"></label>
                <input asp-for="ExistenciaMinima" class="form-control" />
                <span asp-validation-for="ExistenciaMinima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExistenciaMaxima" class="control-label"></label>
                <input asp-for="ExistenciaMaxima" class="form-control" />
                <span asp-validation-for="ExistenciaMaxima" class="text-danger"></span>
            </div>
        </form>

        <div class="form-group row">
            <div class="col-md-6">
                <button id="submitFrmUnidad" class="btn btn-success"><span>@SharedLocalizer["Guardar"] </span><span><i class="fas fa-save"></i></span></button>
            </div>
            <div class="col-md-6">
                <button class="btn btn-default" data-dismiss="modal"><span>@SharedLocalizer["Cancelar"]</span></button>
            </div>

        </div>
    </div>
</div>



  