    function cargarDatos(data) {

        //console.log(data);

        $('.filasCargadas').remove();

        contadorFila = 0;

        for (var i = 0; i < data.length; i++) {
            contadorFila++;
            var body = '<tr class="filasCargadas" id="fila' + contadorFila + '"><td>' + data[i].idBodegaNavigation.nombre + '</td>'
