                    <th style="width:18%"><span>@Lb["Articulo"]</span></th>
                    <th style="width:11%"><span>@Lb["Cantidad"]</span></th>
                    <th style="width:12%"><span>@Lb["PrecioUnitario"]</span></th>
                    <th style="width:7%"><span class="col-md-1">@Lb["Descuento"]</span></th>
                    <th style="width:7%"><span>@Lb["IVA"]</span></th>
                    <th style="width:12%"><span>@Lb["SubTotal"]</span></th>
